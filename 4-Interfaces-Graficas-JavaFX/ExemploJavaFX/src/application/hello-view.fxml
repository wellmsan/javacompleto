              </columns>
            </TableView>
            <TextField fx:id="txtNome" layoutX="14.0" layoutY="116.0" promptText="Digite o nome" />
            <TextField fx:id="txtTelefone" layoutX="183.0" layoutY="116.0" promptText="Digite o telefone" />
            <Label layoutX="15.0" layoutY="98.0" text="Nome:" />
            <Label layoutX="183.0" layoutY="98.0" text="Telefone:" />
            <Button fx:id="btnCadastrar" layoutX="352.0" layoutY="116.0" mnemonicParsing="false" onAction="#cadastrarContato" text="Cadastrar" />
         </children>
      </Pane>
   </children>
</AnchorPane>
